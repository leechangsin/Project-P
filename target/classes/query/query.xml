<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="query">
	<insert id="savePicture" parameterType="java.util.Map">
		INSERT INTO contents(picture)
		VALUES(#{picture})
	</insert>

	<select id="getPicture" resultType="java.util.Map">
		SELECT picture FROM contents
		WHERE id=1
	</select>
	
	<select id="getVideo" resultType="java.util.Map">
		SELECT picture FROM contents
		WHERE id=6
	</select>
	
	<select id="getMemberImage" parameterType="String" resultType="java.util.Map">
		SELECT picture FROM member
		WHERE nickname=#{nickname}
	</select>
</mapper>