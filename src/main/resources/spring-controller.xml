<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="signUpEmailService" class="service.SignUpEmailService">
		<constructor-arg ref="memberInfoDao" />
		<constructor-arg ref="memberDao" />
	</bean>

	<bean id="pw_searchService" class="service.PW_SearchService">
		<constructor-arg ref="memberInfoDao" />
		<constructor-arg ref="pwSearchDao" />
		<constructor-arg ref="mailSender" />
	</bean>

	<bean id="loginRequestService" class="service.LoginRequestService">
		<constructor-arg ref="memberInfoDao" />
		<constructor-arg ref="memberDao" />
	</bean>
	
	<bean id="modifyService" class="service.ModifyService">
		<constructor-arg ref="memberInfoDao"/>
		<constructor-arg ref="memberDao"/>
	</bean>

	<bean class="controller.LoginUI_Controller">
		<constructor-arg ref="loginRequestService" />
	</bean>

	<bean class="controller.IndexUI_Controller" />

	<bean class="controller.RegistUI_Controller">
		<constructor-arg ref="signUpEmailService" />
	</bean>

	<bean class="controller.ContentsUI_Controller">
		<constructor-arg ref="contentsDao" />
	</bean>

	<bean class="controller.SearchUI_Contents_Controller">
		<constructor-arg ref="contentsDao" />
	</bean>

	<bean class="controller.SearchUI_Member_Controller">
		<constructor-arg ref="memberDao" />
	</bean>

	<bean class="controller.PW_SearchUI_Controller">
		<constructor-arg ref="pw_searchService" />
		<constructor-arg ref="memberInfoDao" />
	</bean>

	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="smtp.gmail.com" />
		<property name="port" value="587" />
		<property name="username" value="yichangsin@gmail.com" />
		<property name="password" value="changsin12" />
		<property name="javaMailProperties">
			<props>
				<prop key="mail.smtp.auth">true</prop>
				<prop key="mail.smtp.starttls.enable">true</prop>
			</props>
		</property>
	</bean>
	
	<bean class="controller.ProfileUI_Controller">
		<constructor-arg ref="modifyService"/>
	</bean>
</beans>